#!/bin/bash

# script bash to convert le file HDF5 into text file 


bank=$1

echo "Bank to process:"
echo $bank

cd $bank
rm -f 1.bam* tmp
rm -f 2.bam* tmp

mkdir -p tmp/mat
python h5dictToTxt.py $bank/tmp/hic_lib.hdf5 $bank/tmp

cd $bank/tmp
paste chrms1 cuts1 strands1 chrms2 cuts2 strands2 rfragIdxs1 rfragIdxs2 > output_alignment_idpt.dat
